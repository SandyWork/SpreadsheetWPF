<Window
      
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpreadsheetWPF"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions" xmlns:mui="http://firstfloorsoftware.com/ModernUI" x:Name="win_main" x:Class="MainWindow"
      
        mc:Ignorable="d"
        Title="MainWindow" SizeChanged="colSize" Width="750" Height="800" Icon="New Job-96.ico">
    <ScrollViewer x:Name="scrlVw_window" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" >

        <DockPanel x:Name="pnl_dock" Width="750" Height="800" >

            <Grid x:Name="grid1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TabControl Grid.Row="0" FontWeight="Bold">
                    <TabItem>
                        <TabItem.Background>
                            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                <GradientStop Color="#FFF0F0F0" Offset="0"/>
                                <GradientStop Color="#FFE5E5E5" Offset="1"/>
                            </LinearGradientBrush>
                        </TabItem.Background>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">

                                <Image Source="/Menu1.png" Width="20" Height="20" >
                                    <Image.OpacityMask>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="White" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Image.OpacityMask>
                                </Image>
                                <TextBlock Text=" Menu1" FontWeight="Normal" FontSize="14" />
                            </StackPanel>
                        </TabItem.Header>
                        <StackPanel x:Name="stckpnl_menu1" Orientation="Horizontal">
                            <StackPanel Orientation="Vertical">
                                <Button BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Name="btn_import" Click="btn_import_Click" Background="White">
                                    <Button.Content>
                                        <Image Source="import-icon.png" Width="69" Height="63"/>
                                    </Button.Content>
                                </Button>

                                <Label Content="Import Excel" HorizontalAlignment="Center" FontWeight="Normal" FontSize="14" />
                            </StackPanel>
                            <Separator Width="15" Height="{Binding Height, ElementName=stkpnl_menu1}" Opacity="0"/>

                            <StackPanel Orientation="Vertical">
                                <Button BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Name="btn_export" Click="btn_export_Click" Background="White">
                                    <Button.Content>
                                        <Image Source="export-icon.png" Width="69" Height="63"/>
                                    </Button.Content>
                                </Button>
                                <Label Content="Export Excel" HorizontalAlignment="Center" FontWeight="Normal" FontSize="14" />
                            </StackPanel>
                        </StackPanel>

                    </TabItem>
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Menu2.png" Width="20" Height="20" >
                                    <Image.OpacityMask>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="White" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Image.OpacityMask>
                                </Image>
                                <TextBlock Text=" Menu2" FontWeight="Normal" FontSize="14" />
                            </StackPanel>
                        </TabItem.Header>

                        <StackPanel x:Name="stckpnl_menu2" Orientation="Horizontal">
                            <StackPanel Orientation="Vertical">
                                <Button BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Name="btn_save" Click="btn_save_Click" Background="White">
                                    <Button.Content>
                                        <Image Source="/menu2.png" Width="69" Height="63"/>
                                    </Button.Content>
                                </Button>
                                <Label Content="Save" HorizontalAlignment="Center" FontWeight="Normal" FontSize="14" />
                            </StackPanel>
                            <Separator Width="15" Height="{Binding Height, ElementName=stkpnl_menu2}" Opacity="0"/>

                            <StackPanel Orientation="Vertical">
                                <Button BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Name="btn_validate" Click="btn_validate_Click" Background="White">
                                    <Button.Content>
                                        <Image Source="validate.jpg" Width="69" Height="63"/>
                                    </Button.Content>
                                </Button>
                                <Label Content="Validate" HorizontalAlignment="Center" FontWeight="Normal" FontSize="14" />
                            </StackPanel>
                            <Separator Width="15" Height="{Binding Height, ElementName=stkpnl_menu2}" Opacity="0"/>

                            <StackPanel Orientation="Vertical">
                                <Button BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Name="btn_close" Click="btn_close_Click" Background="White">
                                    <Button.Content>
                                        <Image Source="close.png" Width="69" Height="63"/>
                                    </Button.Content>
                                </Button>
                                <Label Content="Close" HorizontalAlignment="Center" FontWeight="Normal" FontSize="14" />
                            </StackPanel>
                        </StackPanel>
                    </TabItem>


                </TabControl>
                <ScrollViewer   x:Name="scrlVw_grid" HorizontalAlignment='Stretch' VerticalAlignment='Stretch' HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"  Grid.Row="1" Grid.RowSpan="5" Margin="30,10,50,65" >
                    <DataGrid HorizontalAlignment="Stretch"
                      x:Name="dg_grid1" 
                      AutoGenerateColumns="False"
                        ColumnWidth="90"
                        CanUserReorderColumns="False"
                        CanUserSortColumns="True"
                        CanUserResizeColumns="True" FontSize="14"
                        >

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name"/>
                            <DataGridTextColumn Header="Selection"/>
                            <DataGridTextColumn Header="Attribute1"/>
                            <DataGridTextColumn Header="Attribute2"/>
                            <DataGridTextColumn Header="Attribute3"/>
                            <DataGridTextColumn Header="Attribute4"/>
                            <DataGridTextColumn Header="Unit_Attri4"/>
                            <DataGridTextColumn Header="Attribute5"/>
                            <DataGridTextColumn Header="MininumVal"/>
                            <DataGridTextColumn Header="NormalVal"/>
                            <DataGridTextColumn Header="MaximumVal"/>
                        </DataGrid.Columns>
                        <DataGrid.Resources>
                            <ContextMenu x:Key="DataGridColumnHeaderContextMenu">
                                <MenuItem x:Name="menu_colVertical" MouseLeftButtonDown="header_rotate" Header="Vertical" IsEnabled="True"></MenuItem>
                                <MenuItem Header="Horizontal" IsEnabled="False"></MenuItem>
                            </ContextMenu>

                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="ContextMenu" Value="{StaticResource DataGridColumnHeaderContextMenu}" />
                            </Style>
                        </DataGrid.Resources>
                    </DataGrid>
                </ScrollViewer>

            </Grid>

        </DockPanel>
    </ScrollViewer>
</Window>
